<!DOCTYPE html>
<html lang="en">
  <%- include('partials/htmlHead') %>
  <body>
    <%- include('partials/header') %>
    <main>
      <div class="container adminContainer">
        <div class="adminDtTitleGroup">
          <h1>Admin</h1>
          <a
            href="/member-only"
            class="svgBtn adminCloseBtn"
            aria-label="close the admin page"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-x-circle"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="15" y1="9" x2="9" y2="15"></line>
              <line x1="9" y1="9" x2="15" y2="15"></line>
              <title>Close the admin page</title>
            </svg></a
          >
        </div>
        <h2><%= dtTitle %></h2>
        <table class="adminTable">
          <% if (dtTitle === 'users') { %> <%- include('partials/tableUsers') %>
          <% } %> <% if (dtTitle === 'messages') { %> <%-
          include('partials/tableMessages') %> <% } %>
        </table>
      </div>
    </main>
    <script src="/uiEventHandlers.js"></script>
  </body>
</html>
