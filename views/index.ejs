<!DOCTYPE html>
<html lang="en">
  <%- include('partials/htmlHead') %>
  <body>
    <%- include('partials/header') %>
    <main>
      <h1 class="srOnly">Posts</h1>
      <% messages.forEach(message => { %>
      <article>
        <div class="container messageContainer">
          <h2><%= message.title %></h2>
          <p><%= message.message %></p>
          <div class="messageInfoGroup">
            <% if (message.username) { %>
            <p class="semiBold"><%= message.username %></p>
            <% } %>
            <% if (message.timestamp) { %>
            <p class="lightTextColor"><%= message.timestamp %></p>
            <% } else {
              %>
            <p class="lightTextColor">(author and time hidden)</p>
            <% } %>
          </div>
          <% if (currentUser && currentUser.is_admin) { %>
          <form
            action="/admin/messages/delete/<%= message.id %>/via-public?_method=DELETE"
            method="POST"
          >
            <button
              class="svgBtn"
              aria-label="Delete message"
              onclick="return confirm('Are you sure you want to delete this message (messageId: <%= message.id %>)?')"
            >
              <svg
                class="messageDeleteSvg"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-trash-2"
              >
                <polyline points="3 6 5 6 21 6"></polyline>
                <path
                  d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                ></path>
                <line x1="10" y1="11" x2="10" y2="17"></line>
                <line x1="14" y1="11" x2="14" y2="17"></line>
              </svg>
            </button>
          </form>
          <% } %>
        </div>
      </article>
      <% }) %>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
