<!DOCTYPE html>
<html lang="en">
  <%- include('partials/htmlHead') %>
  <body>
    <main class="container formPageContainer">
      <a
        class="cancelBtn svgBtn"
        href="/member-only"
        aria-label="Cancel posting a new message"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-x-circle"
        >
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="15" y1="9" x2="9" y2="15"></line>
          <line x1="9" y1="9" x2="15" y2="15"></line>
          <title>Cancel posting a new message</title>
        </svg>
      </a>
      <h1 class="formPageTitle">Create a new message</h1>
      <div class="postMessageGroup">
        <%- include('partials/validationErrors') %>
        <a
          class="refreshBtn svgBtn"
          href="/create-message"
          aria-label="Clear the form"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-refresh-ccw"
          >
            <polyline points="1 4 1 10 7 10"></polyline>
            <polyline points="23 20 23 14 17 14"></polyline>
            <path
              d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"
            ></path>
            <title>Clear the form</title>
          </svg>
        </a>
        <form action="/create-message" method="POST">
          <div class="inputGroup">
            <label for="title">Title</label>
            <input
              type="text"
              name="title"
              id="title"
              autocapitalize="off"
              autocorrect="off"
            />
          </div>
          <div class="inputGroup">
            <label for="message">Message</label>
            <textarea
              autocapitalize="off"
              autocorrect="off"
              name="message"
              id="message"
              rows="5"
              maxlength="300"
              required
            ></textarea>
            <p>Maximum length is 300 characters.</p>
          </div>
          <button class="submitBtn darkBtn">Post Message</button>
        </form>
      </div>
    </main>
  </body>
</html>
