<thead>
  <tr>
    <th>messageId</th>
    <th>title</th>
    <th>message</th>
    <th>timestamp</th>
    <th>userId</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% data.forEach(message => { %>
  <tr>
    <td><%= message.id %></td>
    <td><%= message.title %></td>
    <td><%= message.message %></td>
    <td><%= message.timestamp %></td>
    <td><%= message.user_id %></td>
    <td>
      <form
        action="/admin/messages/delete/<%= message.id %>/via-admin?_method=DELETE"
        method="POST"
      >
        <button
          class="svgBtn messageDeleteBtn"
          aria-label="Delete this message (messageId: message.id)"
          onclick="return confirm('Are you sure you want to delete this row (messageId: <%= message.id %>)?')"
        >
          <svg
            class="messageDeleteSvg"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-trash-2"
          >
            <polyline points="3 6 5 6 21 6"></polyline>
            <path
              d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
            ></path>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
            <title>Delete this row</title>
          </svg>
        </button>
      </form>
    </td>
  </tr>
  <% }) %>
</tbody>
